/* pages/cet4course/cet4.wxss */

page {
  width: 750rpx;
  height: 100%;
  margin: 0;
  padding: 0;
}

.container {
  width: 750rpx;
  height: 100vh;
  overflow: scroll;
  background-color: #ebe7e7;
}

.title {
  display: flex;
  align-items: center;
  width: 750rpx;
  height: 180rpx;
  background-color: #fff;
  overflow: hidden;
}

.icon {
  display: inline-block;
  width: 50rpx;
  height: 50rpx;
  margin-right: 20rpx;
  margin-left: 40rpx;
  vertical-align: middle;
}

.lesson {
  overflow: hidden;
}

.content {
  display: flex;
  width: 750rpx;
  height: 204rpx;
  background-color: #ebedef;
  border-bottom: solid 1rpx #979494;
  align-items: center;
  justify-content: center;
  overflow: hidden;
}

.no {
  font-size: 26rpx;
}

.text {
  width: 400rpx;
  height: 75rpx;
  font-size: 18rpx;
  margin: 0 50rpx 0 90rpx;
  overflow: hidden;
}

.icon-more {
  width: 36rpx;
  height: 36rpx;
}
