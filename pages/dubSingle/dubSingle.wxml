<!-- dubSingle.wxml -->
<view class='contianer'>
    <!-- 视频 -->
    <video src='{{videoUrl}}'></video>
    <!-- 逐句配音 -->
    <view wx:if='{{byStentebce}}'>
        <!-- 内容区 -->
        <view class='content'>
            <!-- 文字 -->
            <view class='text'>{{sentence}}</view>
            <!-- 按钮 -->
            <view class='btn-area'>
                <!-- 重新配音 -->
                <button class='redub'>重新配音</button>
                <!-- 播放 -->
                <button class='bofang'>播放</button>
                <!-- 配音 -->
                <button class='dub'>配音</button>
                <!-- 下一句 -->
                <button class='next'>下一句</button>
            </view>
        </view>
    </view>
    <!-- 逐段配音 -->
    <view wx:if='{{byParagraph}}'>
        <!-- 内容区 -->
        <view class='content'>
            <!-- 文字 -->
            <view class='paragraph'>{{paragraph}}</view>
            <!-- 按钮 -->
            <view class='btn-area'>
                <!-- 重新配音 -->
                <button class='redub'>重新配音</button>
                <!-- 播放 -->
                <button class='bofang'>播放</button>
                <!-- 配音 -->
                <button class='dub'>配音</button>
            </view>
        </view>
    </view>
    <!-- 底部开关按钮 -->
    <view class='switch'>
        <!-- 圆形按钮 -->
        <view class='button' bindtap=''></view>
        <!-- 逐句配音 -->
        <text class='sentence' style='opacity: {{sOpacity}}'>逐句</text>
        <!-- 逐段配音 -->
        <text class='paragraph' style='display: {{pOpacity}}'>逐段</text>
    </view>
</view>