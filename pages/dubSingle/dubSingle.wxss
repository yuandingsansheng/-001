/* 预览 */

.preview-btn {
    width: 160rpx;
    height: 60rpx;
    font-size: 32rpx;
    line-height: 60rpx;
    margin-top: 200rpx;
}

/* 底部开关按钮 */

.switch {
    width: 130rpx;
    height: 60rpx;
    position: absolute;
    left: 560rpx;
    bottom: 20rpx;
    border-radius: 40rpx;
    margin: 40rpx;
    font-size: 29rpx;
    line-height: 58rpx;
    background: rgb(69, 204, 245);
}

/* 圆型按钮 */

.button {
    height: 60rpx;
    width: 60rpx;
    background: burlywood;
    border-radius: 50%;
    transition: 0.5s;
    position: absolute;
    top: 0;
}

/* sentence，paragraph */

.sen, .par {
    transition: 0.1s;
    color: #b67c7c;
}

.sen {
    margin-left: 10rpx;
}
